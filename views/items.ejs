<!DOCTYPE html>
<html lang="en">
  <%- include('partials/header', { title: title }); %> <!-- Include header here -->
  <body>
    <div class="container mt-5">
      <h1><%= title %></h1>
      <a href="/add-item" class="btn btn-success mb-3">Add New Item</a>
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Description</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% items.forEach(item => { %>
            <tr>
              <td><%= item.id %></td>
              <td><%= item.name %></td>
              <td><%= item.description %></td>
              <td>
                <a href="/edit-item/<%= item.id %>" class="btn btn-warning btn-sm">Edit</a>
                <a href="/delete-item/<%= item.id %>" class="btn btn-danger btn-sm">Delete</a>
              </td>
            </tr>
          <% }); %>
        </tbody>
      </table>
    </div>
  </body>
</html>
